@model Blogge.Web.Models.ViewModel.EditTagRequest
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Tags - Admin Functionality</h1>
    </div>
</div>
<div class="container py-5">
    <form method="post">
        <div class="mt-3">
             <label class="form-label">ID</label>
             <input type="text" id="id" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" id="name" class="form-control" asp-for="Name"  />
        </div>
        <div class="mt-3">
            <label class="form-label">Display Name</label>
            <input type="text" id="displayName" class="form-control" asp-for="DisplayName"/>
        </div>
        <div class="mt-3">
            <div class="d-flex g-2">
                <button class="btn btn-primary" type="submit">Update</button>
                <button class="btn btn-primary" type="submit" asp-area="" asp-controller="AdminTag" asp-action="Delete">Delete</button>
            </div>
        </div>
    </form>
</div>
